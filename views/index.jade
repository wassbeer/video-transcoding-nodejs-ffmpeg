#progressbar
script.
	var socket = io('http://localhost:3000/download-and-transcode');
	socket.on('connect', function(){});
	socket.on('message', function(data){
	$('#progressbar').progressbar({
	maximum: 100,
	step: JSON.parse(data).percent
	});
	});
	socket.on('disconnect', function(){});
